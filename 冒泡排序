#include <stdio.h>
int getIndex(int arr[5],int value)
{
	int i;
    int index;
    for(i=0;i<5;i++)
    {
		if(arr[i]==value)
		{
		index=i;
		break;
		}
		else index=-1;
	}
	return index;
}
int main()
{
int arr[5]={3,12,9,8,6};
int value=3,i;
int indux=getIndex(arr,value);
if(indux=-1) printf("%d bucunzai",value);
else printf("%d cunzai,xuhaowei%d",value,i+1);


return 0;
}
